<% @page_title = "FRIENDS" %>
<div class="friend_users pull-left">
	<div class="line-break"></div>
	<h2>Make a Friend</h2>
	<ul>
	<% for user in @users %>
			<li><%= user.email %><%= link_to "Add Friend", friendships_path(:friend_id => user), :method => :post %></li>
	<% end %> 
	</ul>
</div>

<div class="friends_added pull-right">
	<div class="line-break"></div>
	<h2>Friends</h2>
	<ul>
	<% for friendship in @friendships %>
		<li><%= friendship.friend.email %>
		<%= link_to "View Timeline", timeline_path(friendship.friend.id) %>
		<%= link_to "Remove Friend", friendship, :method => :delete %></li>
	<% end %>
	</ul>
</div>

<div class="friends_by pull-right clear">
	<div class="line-break"></div>
	<h2>Friended By</h2>
	<ul>
	<% for user in current_user.inverse_friends %>
		<li><%=h user.email %></li>
	<% end %>
	</ul>
</div>